<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="news"
            type="bose.ankush.reposnews.data.local.NewsEntity" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_news_list_item_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gap_200dp"
        android:layout_marginBottom="@dimen/gap_16dp"
        android:background="@color/cardBackground"
        app:cardCornerRadius="@dimen/gap_5dp"
        app:cardElevation="@dimen/gap_0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_icon_ripple">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgNews"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    app:setNewsImage="@{news.urlToImage}" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgNewsOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_alignParentBottom="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bg_overlay" />

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNewsSource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/gap_16dp"
                android:layout_marginLeft="@dimen/gap_16dp"
                android:layout_marginBottom="@dimen/gap_8dp"
                android:alpha="0.8"
                android:fontFamily="@font/calibre"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14sp"
                app:layout_constraintBottom_toTopOf="@+id/tvNewsTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:setSource="@{news.sourceName}" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNewsPublishedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/gap_5dp"
                android:layout_marginLeft="@dimen/gap_5dp"
                android:layout_marginBottom="@dimen/gap_8dp"
                android:alpha="0.8"
                android:fontFamily="@font/calibre"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14sp"
                app:layout_constraintBottom_toTopOf="@+id/tvNewsTitle"
                app:layout_constraintStart_toEndOf="@+id/tvNewsSource"
                app:setNewsTime="@{news.publishedAt}" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNewsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/gap_16dp"
                android:layout_marginEnd="@dimen/gap_16dp"
                android:layout_marginBottom="@dimen/gap_10dp"
                android:fontFamily="@font/calibre"
                android:text="@{news.title}"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>
