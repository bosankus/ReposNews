<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/gap_10dp">

        <ProgressBar
            android:id="@+id/pbMembersListState"
            android:layout_width="@dimen/gap_24"
            android:layout_height="@dimen/gap_24"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/gap_16dp"
            android:indeterminateTint="@color/light_peach" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvErrorMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/gap_16dp"
            android:fontFamily="@font/calibre"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/gap_8dp"
            android:background="@drawable/bg_rounded_200dp"
            android:backgroundTint="@color/light_peach"
            android:fontFamily="@font/calibre"
            android:paddingStart="@dimen/gap_10dp"
            android:paddingTop="@dimen/gap_3dp"
            android:paddingEnd="@dimen/gap_10dp"
            android:paddingBottom="@dimen/gap_3dp"
            android:text="@string/_retry"
            android:textColor="?android:textColorPrimary"
            android:textSize="@dimen/text_16sp" />

    </LinearLayout>

</layout>