<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewmodel"
            type="bose.ankush.reposnews.viewmodel.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        app:hasAnyError="@{viewmodel.newsData}">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/layout_error_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/gap_25dp"
            android:fontFamily="@font/pf_regular"
            android:gravity="center_horizontal"
            android:text="@string/error_txt"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_28sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/layout_error_btn_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_25dp"
            android:background="@android:color/holo_green_light"
            android:minHeight="@dimen/gap_0dp"
            android:padding="@dimen/gap_10dp"
            android:text="@string/retry_btn_txt"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_error_txt" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>