<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="bose.ankush.reposnews.viewmodel.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <include
            android:id="@+id/fragment_news_layout_loading"
            layout="@layout/layout_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:viewmodel="@{viewmodel}" />

        <include
            android:id="@+id/layout_news_layout_error"
            layout="@layout/layout_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:viewmodel="@{viewmodel}" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fragment_news_tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/gap_25dp"
            android:fontFamily="@font/pf_semibold"
            android:text="@string/news_txt"
            android:textColor="@color/white"
            android:textSize="@dimen/text_20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_news_rv_news"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gap_0dp"
            android:layout_marginTop="@dimen/gap_16dp"
            android:background="@android:color/transparent"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:padding="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_news_tv_header"
            app:newsList="@{viewmodel.newsData}"
            tools:itemCount="2"
            tools:listitem="@layout/layout_news_list_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>